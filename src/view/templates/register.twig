{% extends "base.twig" %}

{% block style %}
    <link rel="stylesheet" type="text/css" href="{{ base_path }}/assets/css/login.css">
{% endblock %}

{% block scripts %}
    <script src="{{ base_path }}/assets/js/home.js"></script>
{% endblock %}

{% block content %}

    <div class="jumbotron">
        <div class="container">
            <h2>Register</h2>
            <form class="box" action="" method="post" enctype="multipart/form-data">
                <input type="text" placeholder="Name" name="name" onchange="checkError(this, 'text')">
                <input type="text" placeholder="Description" name="description" onchange="checkError(this, 'text')">
                <input type="text" placeholder="Characteristics" name="characteristics" onchange="checkError(this, 'text')">
                <input type="text" placeholder="Username" name="username" onchange="checkError(this, 'text')">
                <input type="date" placeholder="Birthday" name="birthday" onchange="checkError(this, 'text')">
                <input type="text" placeholder="Email" name="email" onchange="checkError(this, 'mail')">
                <input type="password" placeholder="Password" name="password" onchange="checkError(this, 'pass')">
                <input type="password" placeholder="Repeat password" name="repassword" onchange="checkError(this, 'pass')">

                <input type="file" name="picture" id="picture"><br>

                <button class="btn btn-primary full-width loginbtn" type="submit">
                    Sign me in!
                </button>

                <a  class="btn btn-warning full-width signinbtn" href="login">
                    Go back
                </a>

            </form>
        </div>
    </div>

{% endblock %}

